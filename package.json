	"scripts": {
		"build": "hardhat compile && tsc",
		"clean": "rimraf artifacts && rimraf cache && rimraf deployments/localhost && rimraf src/types/*",
		"prepare": "husky install",
		"deploy": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json",
		"set_contracts": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json --deploy-scripts scripts/settings",
		"upgrade_contracts": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json --deploy-scripts scripts/upgrade/${TARGET:=unknown}",
		"deploy_feature": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json --deploy-scripts scripts/features/deploy/${FEATURE:=unknown}",
		"init_feature": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json --deploy-scripts scripts/features/init/${FEATURE:=unknown}",
		"operate": "NODE_ENV=$NETWORK hardhat deploy --network $NETWORK --export export/abi/$NETWORK.json --deploy-scripts scripts/operations/${TARGET:=unknown}",
		"test": "hardhat test",
		"lint": "commitlint --from=HEAD"
	}
}
